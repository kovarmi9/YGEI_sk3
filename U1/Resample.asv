clc; clear; format long G

MyImg=randi(255,8,8,3);


[r,~,b]=size(MyImg);
k=16;
nS=k/r;
nR=k/r;

NewImg=zeros(k,k,b);

for i=0:nR:k-1
   for j=0:nS:k-1
       NewImg(i+1:i+nR,j+1:j+nS)=MyImg(i*nS+1,j*nR+1);
   end
end


